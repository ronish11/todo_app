<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.TODO.Dashbord.DashbordActivity"
    android:theme="@style/DashboardTheme">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/back">

       <RelativeLayout
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           
           <ImageView
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:src="@drawable/profile"
               android:layout_alignParentRight="true">

           </ImageView>

           <TextView
               android:id="@+id/dashbord"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="TODO DASHBORD"
               android:textColor="@color/yellow"
               android:textSize="25dp"
               android:layout_marginTop="10dp"
               android:textStyle="bold">

           </TextView>

           <TextView
               android:id="@+id/dashbord_username"
               android:layout_below="@id/dashbord"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Welocme, their"
               android:textColor="@color/yellow"
               android:textSize="15dp"
               android:layout_marginTop="0dp"
               android:textStyle="bold">

           </TextView>



       </RelativeLayout>
       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:columnCount="2"
           android:rowCount="4"
           android:alignmentMode="alignMargins"
           android:layout_marginTop="110dp"
           android:columnOrderPreserved="false">

           <androidx.cardview.widget.CardView
               android:backgroundTint="@color/backgroundcolor"
               android:id="@+id/card1"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="30dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">
                   
                   <ImageView
                       android:layout_width="100dp"
                       android:src="@drawable/home"
                       android:layout_height="100dp"
                       android:layout_gravity="center">
                   </ImageView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Todo home"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginBottom="20dp">

                   </TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:backgroundTint="@color/backgroundcolor"
               android:id="@+id/card2"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="30dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                   <ImageView
                       android:layout_width="100dp"
                       android:src="@drawable/about"
                       android:layout_height="100dp"
                       android:layout_gravity="center">

                   </ImageView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="About"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginBottom="20dp">

                   </TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:backgroundTint="@color/backgroundcolor"
               android:id="@+id/card3"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="30dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                   <ImageView
                       android:layout_width="100dp"
                       android:src="@drawable/mail"
                       android:layout_height="100dp"
                       android:layout_gravity="center">

                   </ImageView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Mail"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginBottom="20dp">

                   </TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:backgroundTint="@color/backgroundcolor"
               android:id="@+id/card4"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="30dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                   <ImageView
                       android:layout_width="100dp"
                       android:src="@drawable/yt"
                       android:layout_height="100dp"
                       android:layout_gravity="center">

                   </ImageView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Setting"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginBottom="20dp">

                   </TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:backgroundTint="@color/backgroundcolor"
               android:id="@+id/card5"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="30dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                   <ImageView
                       android:layout_width="100dp"
                       android:src="@drawable/fb"
                       android:layout_height="100dp"
                       android:layout_gravity="center">

                   </ImageView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Facebook"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginBottom="20dp">

                   </TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:backgroundTint="@color/backgroundcolor"
               android:id="@+id/card6"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="30dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                   <ImageView
                       android:layout_width="90dp"
                       android:layout_height="100dp"
                       android:layout_gravity="center"
                       android:src="@drawable/logout">

                   </ImageView>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Log out"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="@android:color/black"
                       android:layout_marginLeft="10dp"
                       android:layout_marginBottom="20dp">

                   </TextView>

               </LinearLayout>

           </androidx.cardview.widget.CardView>


       </GridLayout>

   </LinearLayout>

</ScrollView>
